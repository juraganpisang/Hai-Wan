<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/suka"
    tools:context=".AboutFragment">

    <ImageView
        android:id="@+id/sayaIv"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/foto" />

    <TextView
        android:id="@+id/namaTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ronald Arrival Fajar"
        android:layout_below="@+id/sayaIv"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/nrpTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="171111076 | STIKI MALANG"
        android:layout_below="@+id/namaTv"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/contact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ronaldarrivalf@gmail.com"
        android:layout_below="@+id/nrpTv"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnContact"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/btnMenu2"
        android:textColor="#fff"
        android:text="Contact Me"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Versi 1.0"
        android:layout_gravity="bottom"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"/>

</LinearLayout>